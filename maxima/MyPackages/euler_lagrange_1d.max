euler_lagrange_1d(xa,xb,fa,fb):=(
/* ---------------------------------------------------------------------------
   asks for a Lagrangian
   --------------------------------------------------------------------------- */
   L:read("Enter a Lagrangian"),
/* ---------------------------------------------------------------------------
   echoes it, to make sure
   --------------------------------------------------------------------------- */
   print("L = ",L),
/* ---------------------------------------------------------------------------
   produces a list with the two partial derivatives of f
   --------------------------------------------------------------------------- */
   depends(f,x)
   
/*----------------------------------------------------------------------------
depends(f,x),
L(f,a,b)  := a*f^2 + b*diff(f,x)^2,
Iv(f,a,b) := integrate(L(f,a,b),x,0,1),
EL(f,a,b) := diff(diff(L(f,a,b),diff(f,x)),x) - diff(L(f,a,b),f),
ode2(EL(f,a,b)=0,f,x),
-------------------------------------------------------------------------------*/
)$