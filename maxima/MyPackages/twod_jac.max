twod_jac():=(
   print("the independent variables are named x and y"),
/* ---------------------------------------------------------------------------
   asks for the dependent variables
   --------------------------------------------------------------------------- */
   p:read("enter dependent var p"),
   q:read("enter dependent var q"),   
/* ---------------------------------------------------------------------------
   echoes it, to make sure
   --------------------------------------------------------------------------- */
   print("p = ",p),
   print("q = ",q),
/* --------------------------------------------------------------------------- */
   dp_dx: diff(p,x),
   dp_dy: diff(p,y),
   dq_dx: diff(q,x),
   dq_dy: diff(q,y),
   
   Jac: matrix([dp_dx,dp_dy],[dq_dx,dq_dy])
)$
